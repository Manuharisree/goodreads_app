<% provide(:title, 'Add Book') %>
<h1>Add Your Book</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :author %>
      <%= f.text_field :author %>

      <div class="field">
       <%= f.text_area :content, placeholder: "Enter the details about Book..." %>
      </div>

      <%= f.submit "Add Book", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>